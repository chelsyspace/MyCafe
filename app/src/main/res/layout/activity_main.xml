<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_tertiary30"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center|center_horizontal|center_vertical"
        android:layout_weight="1"
        android:background="@color/white"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:text="My Cafe App"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:backgroundTint="#E1CCF1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MENU" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="QUANTITY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_weight="1"
        android:backgroundTint="#E1CCF1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_menu"
            android:layout_width="97dp"
            android:layout_height="129dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cendol :"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="103dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cendol_removebg_preview" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="35dp"
            android:layout_height="129dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="129dp"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_tertiary90"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_tertiary30"
                android:text="+ADD"
                app:rippleColor="#F4D6D6" />

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_tertiary30"
                android:text="-REMOVE" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_check_out"
            android:layout_width="333dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_tertiary30"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="CHECK OUT" />
    </LinearLayout>

</LinearLayout>